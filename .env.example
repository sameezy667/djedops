# WeilChain Applet Protocol Environment Configuration

# =============================================================================
# Gemini AI Configuration (NEW - For Semantic Command Bar)
# =============================================================================

# Gemini AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
# Required for natural language workflow generation
NEXT_PUBLIC_GEMINI_API_KEY=your_api_key_here

# =============================================================================
# WeilChain SDK Configuration
# =============================================================================

# Sentinel RPC Endpoint
# The WeilChain Sentinel node endpoint for contract execution and queries
# Production: https://sentinel.unweil.me
# Testnet: Contact WeilChain team for testnet endpoint
NEXT_PUBLIC_WEIL_SENTINEL_ENDPOINT=https://sentinel.unweil.me

# Registry Contract Address
# Address of the deployed AppletRegistry WASM contract (hex, no 0x prefix)
# Leave empty for demo mode with mock data
# Deploy contract first, then paste address here
NEXT_PUBLIC_WEIL_REGISTRY_CONTRACT=

# Deployer Private Key (BACKEND ONLY - Never expose to frontend)
# Used for deploying contracts and administrative operations
# Format: hex-encoded private key without 0x prefix
# WARNING: Keep this secret! Only use in secure deployment scripts
WEIL_DEPLOYER_PRIVATE_KEY=

# =============================================================================
# DjedOPS Configuration (Existing)
# =============================================================================

# Djed Protocol API
NEXT_PUBLIC_DJED_API_URL=https://api.djed.xyz

# Ergo Blockchain Explorer
NEXT_PUBLIC_ERGO_EXPLORER_URL=https://api.ergoplatform.com

# DEX API for price feeds
NEXT_PUBLIC_DEX_API_URL=https://api.spectrum.fi

# =============================================================================
# Feature Flags
# =============================================================================

# Enable demo mode with mock data
NEXT_PUBLIC_DEMO_MODE=false

# Enable WeilChain integration (set to false to use original Nautilus wallet)
NEXT_PUBLIC_ENABLE_WEIL_CHAIN=true

# Enable applet marketplace
NEXT_PUBLIC_ENABLE_MARKETPLACE=true

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Mock contract responses (for frontend dev without deployed contract)
NEXT_PUBLIC_MOCK_CONTRACT=false
